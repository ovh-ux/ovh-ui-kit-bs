{
  "name": "ovh-ui-kit-bs",
  "version": "4.0.0",
  "description": "A bootstrap theme for the OVH managers, based on ovh-ui-kit.",
  "license": "BSD-3-Clause",
  "homepage": "https://ovh-ux.github.io/ovh-ui-kit-bs/",
  "author": "OVH SAS",
  "files": [
    "dist"
  ],
  "main": "./dist/js/bootstrap.js",
  "style": "./dist/css/oui-bs3.css",
  "bugs": {
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs.git"
  },
  "scripts": {
    "build": "run-s clean dist docs",
    "clean": "rimraf dist docs/assets",
    "dist": "run-p dist:*",
    "dist:less": "lessc --remcalc --clean-css --source-map \"src/index.less\" \"dist/css/oui-bs3.css\"",
    "dist:fonts": "cpy \"src/fonts/**/*\" \"dist/fonts\"",
    "dist:bootstrap": "cpy \"node_modules/bootstrap/dist/{fonts/**/*,js/bootstrap.*}\" \"dist/\"",
    "docs": "run-p docs:*",
    "docs:oui-bs": "cpy \"dist/**/*\" \"docs/assets/\"",
    "preversion": "yarn test",
    "version": "yarn build && git add .",
    "start": "open-cli docs/index.html",
    "test": "stylelint \"src/**/*.less\""
  },
  "devDependencies": {
    "bootstrap": "^3.4.1",
    "cpy-cli": "^3.1.0",
    "less": "^3.11.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-remcalc": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^5.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0"
  }
}
